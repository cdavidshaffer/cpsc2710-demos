<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@style/main.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.au.cpsc.customer.controller.CustomerSummaryApplicationController">
   <center>
      <fx:include fx:id="customerTableView" source="view/customer-table-view.fxml" />
   </center>
   <bottom>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <fx:include fx:id="customerDetailView" source="view/customer-detail-view.fxml" HBox.hgrow="ALWAYS" />
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="2.0">
               <children>
                  <Button id="green" fx:id="updateButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#updateButtonAction" text="Update" />
                  <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#newButtonAction" text="New" />
                  <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#deleteButtonAction" text="Delete" />
               </children>
               <HBox.margin>
                  <Insets bottom="2.0" left="10.0" right="2.0" top="2.0" />
               </HBox.margin>
            </VBox>
         </children>
